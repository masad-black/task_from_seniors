generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users{
  id String @id @default(uuid())
  name String
  email String @unique
  password String
  age Int
  role user_roles @default(user)
}

// only these roles are allowed in org
enum user_roles {
  user
  admin
  super_admin
}

// user can only view products
// admin can add new products and updata them
// only super_admin can delete any product
model Products{
  id String @id @default(uuid())
  name String
  description String
  availableColors String[] @default([])
  price Decimal 
}