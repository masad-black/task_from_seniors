generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id String @id @default(uuid())
  username String
  email String @unique
  password String
  bio String
  role UserRoles @default(user)
  profileImage String? 
  permission Json?
  followers String[]


  createAt DateTime @default(now())
}

enum UserRoles{
  user
  admin
}

model Post{
  id String @id @default(uuid())
  createrId String 
  discription String
  images String[]
  likes String[] // storing user id's


  createAt DateTime @default(now())
}

model Comment{
  id String @id @default(uuid())
  createrId String
  postId String
  message String
  likes String[]

  createAt DateTime @default(now())
}


model Chat{
  id String @id @default(uuid())
  senderId String
  receiverId String
  message String
  
  createAt DateTime @default(now())
}
